<Window x:Class="SP_07._async_love.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP_07._async_love"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition />
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <UniformGrid Columns="3" Grid.Row="0">
            <Button Content="Simple Download" FontSize="20" Margin="5" Click="SimpleDownload"/>
            <Button Content="Don't Click" FontSize="20" Margin="5" Click="DontClick"/>
            <Button Content="Task Download" FontSize="20" Margin="5" Click="TaskDownload"/>
        </UniformGrid>

        <TextBox x:Name="contentText" Grid.Row="1"/>

        <UniformGrid Columns="3" Grid.Row="2">
            <Button Content="Task context download" FontSize="20" Margin="5" Click="TaskContextDownload"/>
            <Button Content="Async download" FontSize="20" Margin="5" Click="DownloadAsync"/>
            <Button Content="Clear" FontSize="20" Margin="5" Click="Clear"/>
        </UniformGrid>

    </Grid>
</Window>
